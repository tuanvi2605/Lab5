<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Thông tin sản phẩm</title>
  <script>
    async function addToCart(productId) {
      try {
        const response = await fetch('/cart/add', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id: productId })
        });
        const result = await response.json();
        alert(result.message);
      } catch (error) {
        console.error('Lỗi:', error);
        alert('Có lỗi xảy ra!');
      }
    }
  </script>
</head>
<body>
<h1>Thông tin sản phẩm</h1>
<ul style="padding: 20px">
  <li>Tên sản phẩm: <%= product.name %></li>
  <li>Giá bán: <%= product.price %></li>
</ul>
<button onclick="addToCart('<%= product.id %>')">Thêm vào giỏ hàng</button>
<a href="/product"><button>Quay lại danh sách sản phẩm</button></a> <!-- Sửa đường dẫn -->
<a href="/cart"><button>Xem giỏ hàng</button></a>
</body>
</html>
